<div class="bg-secondary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 py-5">
                <p>Latest News</p>
                <h2>{{featuredArticle.title}}</h2>
                <p>{{format-date featuredArticle.pubDate}}</p>
                <p>{{decode-entities featuredArticle.content}}</p>
                <a class="btn btn-primary" href="{{featuredArticle.url}}">Read Full Article</a>
            </div>
        </div>
    </div>
</div>
<div class="container">
        {{#each secondaryArticles as |article|}}
        <div class="row justify-content-center">
          <div class="col-12 col-sm-10 pt-5">
              <div class="mb-5">
                  <h3 class="mb-3">{{article.title}}</h3>
                  <p>{{format-date article.pubDate}}</p>
                  <p>{{decode-entities article.content}}</p>
                  <a class="btn btn-primary" href="{{article.url}}">Read Full Article</a>
              </div>
            </div>
          </div>
        {{/each}}
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 mb-5 text-center">
            <a class="btn btn-primary my-4" href="https://blog.harmonypsa.com/news">Read More Articles</a>
            <hr class="my-0">
        </div>
    </div>
<script type="application/ld+json">
{
  "@context": "http://schema.org/", 
  "@type": "BreadcrumbList", 
  "itemListElement": [
    { 
      "@type": "ListItem", 
      "position": "1", 
      "item": { 
        "@id": "https://www.harmonypsa.com", 
        "name": "HarmonyPSA" 
      } 
    },
    { 
      "@type": "ListItem", 
      "position": "2", 
      "item": { 
        "@id": "https://www.harmonypsa.com/resources", 
        "name": "Resources" 
      } 
    },
    { 
      "@type": "ListItem", 
      "position": "3", 
      "item": { 
        "@id": "https://www.harmonypsa.com/resources/news", 
        "name": "News" 
      } 
    }
  ]
}
</script>
</div>
