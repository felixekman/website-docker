<div class="bg-secondary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 py-5">
                <p>Featured Blog</p>
                <h2>{{featuredBlog.title}}</h2>
                <p>{{decode-entities featuredBlog.content}}</p>
                <a class="btn btn-primary" href="{{featuredBlog.url}}">Read Full Article</a>
            </div>
        </div>
    </div>
</div>
<div class="container">
    {{#each secondaryBlogs as |blog|}}
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 pt-5">
            <div class="mb-5">
                <h3 class="mb-3">{{blog.title}}</h3>
                <p>{{decode-entities blog.content}}</p>
                <a class="btn btn-primary" href="{{blog.url}}">Read Full Article</a>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10">
            <hr class="mt-3 mb-0">
        </div>
    </div>
    {{/each}}
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 mb-5 text-center">
            <a class="btn btn-primary my-4" href="https://blog.harmonypsa.com/">Read More Articles</a>
            <hr class="my-0">
        </div>
    </div>
<script type="application/ld+json">
{
  "@context": "http://schema.org/", 
  "@type": "BreadcrumbList", 
  "itemListElement": [
    { 
      "@type": "ListItem", 
      "position": "1", 
      "item": { 
        "@id": "https://www.harmonypsa.com", 
        "name": "HarmonyPSA" 
      } 
    },
    { 
      "@type": "ListItem", 
      "position": "2", 
      "item": { 
        "@id": "https://www.harmonypsa.com/resources", 
        "name": "Resources" 
      } 
    },
    { 
      "@type": "ListItem", 
      "position": "3", 
      "item": { 
        "@id": "https://www.harmonypsa.com/resources/blog", 
        "name": "Featured Blog" 
      } 
    }
  ]
}
</script>
</div>
