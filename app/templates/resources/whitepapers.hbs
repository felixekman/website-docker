<div class="bg-secondary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-4 col-md-3 pt-5 text-center">
                <img class="img-fluid" src="{{featuredWhitepaper.coverImage.file.url}}" alt="{{featuredWhitepaper.name}}">
            </div>
            <div class="col-8 col-md-7 py-5">
                <p>Featured Whitepaper</p>
                <h2>{{featuredWhitepaper.name}}</h2>
                {{markdown-to-html featuredWhitepaper.description}}
                {{markdown-to-html featuredWhitepaper.hubSpotEmbedCode}}
            </div>
        </div>
    </div>
</div>
<div class="container">
    {{#each secondaryWhitepapers as |whitepaper index|}}
    <div class="row justify-content-center">
        <div class="col-4 col-md-3 pt-5">
            <img class="img-fluid" src="{{whitepaper.coverImage.file.url}}" alt="{{whitepaper.name}}">
        </div>
        <div class="col-8 col-md-7 pt-5">
            <div class="mb-5">
                <h3 class="mb-3">{{whitepaper.name}}</h3>
                {{markdown-to-html whitepaper.description}}
                {{markdown-to-html whitepaper.hubSpotEmbedCode}}
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-md-10">
            <hr class="mt-3 mb-0">
        </div>
    </div>
    {{/each}}
